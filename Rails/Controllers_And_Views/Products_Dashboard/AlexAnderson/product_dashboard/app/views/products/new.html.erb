<h1>New Product</h1>
<% if @errors %>
  <% @errors.each do |error| %>
  <h4> <%= error %></h4>
  <% end %>
<% end %>

<form class="" action="/product/create" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  Name <br>
  <input type="text" name="name" required="true"> <br>
  Description <br>
  <input type="text" name="description" required="true"> <br>
  Price <br>
  <input type="text" name="price" required="true"> <br>
  <p>
  <input type="submit" value="Create">
</form>
<a href="/products">Back</a>
