<h1>Listing Products</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td><%=product.name%></td> <td><%= product.description%></td><td>$<%= product.pricing%></td>
    <td>
        <a href="/users/<%=product.id%>">Show</a> |
        <a href="/users/<%=product.id%>/edit">Edit</a> |
        <%= link_to 'destroy',"/products/#{product.id}", :method => :delete %>
    </td>
  </tr>
  <% end %>
</table>
<a href="/products/new">New Product</a>
