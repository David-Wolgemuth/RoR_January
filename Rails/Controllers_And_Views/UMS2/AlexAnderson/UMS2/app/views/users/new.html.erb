<h1>New user</h1>
<% if @errors %>
  <% @errors.each do |error| %>
  <h4> <%= error %></h4>
  <% end %>
<% end %>

<form class="/user/create" action="/user/create" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  first_name <br>
  <input type="text" name="first_name" required="true"> <br>
  last_name <br>
  <input type="text" name="last_name" required="true"> <br>
  Email <br>
  <input type="text" name="email" required="true"> <br>
  Password <br>
  <input type="password" name="password" required="true" minlength="6"> <br>
  <p>
  <input type="submit" value="Create">
</form>
<a href="/users">Back</a>
