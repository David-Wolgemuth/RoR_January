<h1>Editing User</h1>

<% if @errors %>
 <% @errors.each do |error| %>
 <h4> <%= error[1][0] %></h4>
 <% end %>
<% end %>

<form action="/<%=@user.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
  <p>first_name</p><input type="text" name="first_name" value="<%@user.first_name%>"><br>
  <p>last_name</p><input type="text" name="last_name" value="<%@user.last_name%>>"><br>
<p>Email</p><input type="text" name="email_address" value="<%@user.email_address%>>"><br>
<p>Password</p><input type="password" name="password" value="<%@user.password%>"><br>
<input type="submit" value="Update"><br>

</form>
<a href="/index">Back</a>
<a href="/<%=@user.id %>/show">Show</a>
